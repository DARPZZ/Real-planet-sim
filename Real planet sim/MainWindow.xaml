<Window x:Class="Real_planet_sim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Real_planet_sim"
        mc:Ignorable="d"
        
         Title="MainWindow" Height="1080" Width="1920">
    <Canvas>
        <Button x:Name="test" Content="CLICK"  Height="34" Width="122"></Button>
        <Ellipse
 x:Name="Jupiter"
 Width="25"
 Height="25"
 Fill="Yellow"
 Stroke="Black"
 StrokeThickness="4"
 Canvas.Left="608"
 Canvas.Top="365" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Ellipse
         x:Name="sun"
         
 Width="50"
 Height="50"
 Fill="red"
 Stroke="Black"
 StrokeThickness="4"
 Canvas.Left="747"
 Canvas.Top="365" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.965"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Ellipse
          Name="Mars"
         Width="25"
         Height="25"
         Fill="Gray"
         Stroke="Black"
         StrokeThickness="4"
         Canvas.Left="643"
         Canvas.Top="365" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Ellipse
         x:Name="Merkur"
         Width="25"
         Height="25"
         Fill="Black"
         Stroke="Black"
         StrokeThickness="4"
         Canvas.Left="578"
         Canvas.Top="365" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Ellipse
         x:Name="Uranus"
         Width="25"
         Height="24"
         Fill="Green"
         Stroke="Black"
         StrokeThickness="4"
         Canvas.Left="681"
         Canvas.Top="365" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="SUN" Canvas.Left="750" Canvas.Top="373" FontWeight="Bold" Height="36" Width="46" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Width="150" x:Name="Tid" Canvas.Left="173" Canvas.Top="17"></TextBox>
        <Ellipse
            
            x:Name="Neptune"
            Width="25"
            Height="25"
            Fill="Purple"
            Stroke="Black"
            StrokeThickness="4"
            Canvas.Left="548"
            Canvas.Top="365" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Ellipse
             ToolTip="Earth"
            x:Name="Eeath"
            Width="25"
            Height="25"
            Fill="Blue"
            Stroke="Black"
            StrokeThickness="4"
            Canvas.Left="518"
            Canvas.Top="366" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Ellipse
            x:Name="Saturn"
            Width="25"
            Height="25"
            Fill="Sienna"
            Stroke="Black"
            StrokeThickness="4"
            Canvas.Left="488"
            Canvas.Top="365" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Ellipse
            x:Name="Venus"
            Width="25"
            Height="25"
            Fill="HotPink"
            Stroke="Black"
            StrokeThickness="4"
            Canvas.Left="458"
            Canvas.Top="366" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ListBox Height="368" Width="197" Canvas.Top="202" HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="0" SelectionChanged="ListBox_SelectionChanged">

            <ListBoxItem Background="White" Content="SUN" FontWeight="Bold" FontSize="25" Foreground="red"/>
            <ListBoxItem Background="white" Content="Mercury" FontWeight="Bold" FontSize="25" Foreground="black"/>
            <ListBoxItem Background="white" Content="Venus" FontWeight="Bold" FontSize="25" Foreground="HotPink"/>
            <ListBoxItem Background="white" Content="Earth" FontWeight="Bold" FontSize="25" Foreground="blue"/>
            <ListBoxItem Background="white" Content="Mars" FontWeight="Bold" FontSize="25" Foreground="Gray"/>

            <ListBoxItem Background="white" Content="Jupiter" FontWeight="Bold" FontSize="25" Foreground="yellow"/>
            <ListBoxItem Background="white" Content="Saturn" FontWeight="Bold" FontSize="25" Foreground="Sienna"/>

            <ListBoxItem Background="white" Content="Uranus" FontWeight="Bold" FontSize="25" Foreground="Green"/>
            <ListBoxItem Background="white" Content="Neptune" FontWeight="Bold" FontSize="25" Foreground="Purple"/>

        </ListBox>

    </Canvas>

</Window>
